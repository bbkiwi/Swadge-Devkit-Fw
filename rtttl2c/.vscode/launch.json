{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Gallery",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/rtttl2c",
            "args": [
                "Swadgetones/bubble.txt",
                "Swadgetones/dkc2title.txt",
                "Swadgetones/gerudo.txt",
                "Swadgetones/mkombat.txt",
                "Swadgetones/tetris.txt",
                "Swadgetones/ctfrog.txt",
                "Swadgetones/dkcjung.txt",
                "Swadgetones/kraid.txt",
                "Swadgetones/sm2dac.txt",
                "Swadgetones/wario.txt",
                "Swadgetones/ghouls.txt",
                "Swadgetones/smw2map.txt",
                "Swadgetones/dkongstg.txt",
                "Swadgetones/iceclim.txt",
                "Swadgetones/pacman.txt",
                "Swadgetones/bomber.txt"
                "Swadgetones/FourSeasons.txt",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make"
        },
        {
            "name": "(gdb) Launch Metal Gear",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/rtttl2c",
            "args": [
                "Swadgetones/MetalGear.txt",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make"
        }
    ]
}